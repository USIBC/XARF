#!/bin/bash
# Starts XARF and a corresponding swank server on localhost:SWANK_PORT.
# Uses definitions in XARF_HOME/xarf-env
# D. Racine 20160302

die() { echo "$(basename $0): $1" >&$2; exit $3; }

[ -z ${XARF_HOME+x} ] && die "error: XARF_HOME is not set" 2 1

. "$XARF_HOME/xarf-env" || exit 1

trap "" SIGCHLD  # prevents process substitution zombies

mkdir -pm 700 "$XARF_HOME/log" || exit 1

L="$XARF_HOME/log/sbcl.xarf"

N=/dev/null

S="\
  (require :asdf)
  (asdf:initialize-source-registry #P\"$XARF_HOME/asdf.conf\")
  (require :xarf-dashboard)
  (in-package :xarf)
  (start-xarf)
  (load \"$SLIME_HOME/swank-loader.lisp\")
  (swank-loader:init)
  (swank:create-server :port $SWANK_PORT :dont-close t)
  (princ \"== XARF started at \")
  (loop (format t \"mark: ~a~%\" (timestr)) (sleep 900))"

netstat -lntu |egrep -q ":($XARF_WEB_PORT|$SWANK_PORT)  *[0-9:]" \
  && die "no action taken: a port defined in $XARF_HOME/xarf-env is in use" 2 1

nohup sbcl --lose-on-corruption --userinit <(echo "$S") --eval "'xarf" <$N >"$L" 2>&1 &

sleep 3

kill -0 $! && die "sbcl PID $! started, writing to $L" 1 0 || die "sbcl quit, see $L" 2 1
